@model Utopia_Trips.Models.FindUsModel

@{
    ViewBag.Title = "CorporateOuting | Corporate Discount | Utopiatrips";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section metatags
{
    <meta name="keywords" content="singles adventure travel,adventure holidays,trek adventures,trekking holidays,trekking vacations,corporate team building activities,corporate discount" />
    <meta name="description" content="Experience the corporate team building activities amidst nature by booking your treks today!" />
}

<section class="parallax-window" data-parallax="scroll" data-image-src="../Content/CustomImg/corporate.jpg" data-natural-width="1200" data-natural-height="430">
    <div class="parallax-content-1">
        <div class="animated fadeInDown">
            <h1>Corporate Outing</h1>
            <p>One Team One Dream</p>
        </div>
    </div>
</section>


<main>
    <div id="position">
        <div class="container">
            <ul>
                <li>
                    <a href="@Url.Action("Index", "Home")">Home</a>
                </li>

                <li>Corporate Outing</li>
            </ul>
        </div>
    </div>
    <!-- End Position -->
    <div class="container margin_60">
        <div class="row">
            <div class="col-md-8 col-sm-8">
                <div class="form_title">
                    <h3><strong><i class="icon-pencil"></i></strong>Fill the form below</h3>
                </div>
                <div class="step">
                    <div id="message-contact"></div>
                    @using (Html.BeginForm("CorporateOuting", "CorporateDiscount", FormMethod.Post))
                    {
                        <div class="form-group">
                            <label style="color:red;display:none;" id="invalidInput">Invalid inputs, Please try again!</label>
                        </div>

                        if (ViewBag.Message != null)
                        {
                            <div class="form-group">
                                <label style="color:forestgreen;display:none;" id="invalidInput">Thanks for contacting us! Our representative will call youo shortly.</label>
                            </div>
                        }

                        <div class="row">
                            <div class="col-md-6 col-sm-6">
                                <div class="form-group">
                                    <label>First Name</label>
                                    <input type="text" class="form-control" id="name_contact" name="FirstName" placeholder="Enter Name">
                                </div>
                            </div>
                            <div class="col-md-6 col-sm-6">
                                <div class="form-group">
                                    <label>Team Size</label>
                                    <input type="number" min=0 oninput="validity.valid||(value='');" class="form-control" id="team_size" name="GroupSize" placeholder="Enter Group Size">
                                </div>
                            </div>
                        </div>
                        <!-- End row -->
                        <div class="row">
                            <div class="col-md-6 col-sm-6">
                                <div class="form-group">
                                    <label>Email</label>
                                    <input type="email" id="email_contact" name="Email" class="form-control" placeholder="Enter Email">
                                </div>
                            </div>
                            <div class="col-md-6 col-sm-6">
                                <div class="form-group">
                                    <label>Phone</label>
                                    <input type="text" id="phone_contact" name="Phone" class="form-control" placeholder="Enter Phone number">
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label>Message</label>
                                    <textarea rows="5" id="message_contact" name="Message" class="form-control" placeholder="Write your message" style="height:200px;"></textarea>
                                </div>
                            </div>
                        </div>
                        <input type="hidden" id="subject" name="Subject" value="Corporate Discount" class="form-control">

                        <div class="row">
                            <div class="col-md-6">
                                <input type="submit" value="Submit" class="btn_1" id="submit-contact">
                            </div>
                        </div>
                    }
                </div>
            </div>
            <!-- End col-md-8 -->
            <div class="col-md-4 col-sm-4">
                <div class="box_style_1">
                    <!--<span class="tape"></span>-->
                    <h4>Address <span><i class="icon-pin pull-right"></i></span></h4>
                    <p>
                        #80, Ground Floor 2nd Cross Rood Reflex Layout, Uttaralli Main Road, SBI, BANK opposite,, Kengeri Bangalore 560060, Hemmigepura Ward 198, RR Nagar, Bengaluru, Karnataka 560060
                    </p>

                    <ul id="contact-info">
                        <li>+ 91 8197993224</li>
                        <li>
                            <a href="#">support@utopiatrips.com</a>
                        </li>
                    </ul>
                </div>
                <div class="box_style_4">
                    <i class="icon_set_1_icon-57"></i>
                    <h4>Need <span>Help?</span></h4>
                    <a href="tel://8197993224" class="phone">+91 8197993224</a>
                    <small>Monday to Friday 9.00am - 7.30pm</small>
                </div>
            </div>
            <!-- End col-md-4 -->
        </div>
        <!-- End row -->
    </div>
    <!-- End container -->
</main>
<!-- End main -->
<script>
          $('form').submit(function () {
              // Get the Login Name value and trim it
              var name = $.trim($('#name_contact').val());
              var size = $.trim($('#team_size').val());
              var email = $.trim($('#email_contact').val());
              var phone = $.trim($('#phone_contact').val());
              var msg = $.trim($('#message_contact').val());
              // Check if empty of not
              if (name === '' || email === '' || phone === '' || msg === '' || size==='') {
                  $("#invalidInput").css("display", "block");
                  return false;
              }
              $("#invalidInput").css("display", "none");
              return true;
          });
</script>