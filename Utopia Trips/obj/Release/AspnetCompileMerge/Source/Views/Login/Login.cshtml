
@{
    Layout = null;
}

@section metatags
{
    <meta name="keywords" content="utopiatrips login,utopiatrips signin" />
    <meta name="description" content="Login to explore the best trekking destinations in and around Bangalore! Login to the world of adventures you'll never forget and cherish throughout your life! " />
}

<!DOCTYPE html>
<!--[if IE 8]><html class="ie ie8"> <![endif]-->
<!--[if IE 9]><html class="ie ie9"> <![endif]-->
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <meta name="description" content="Utopiatrips - Trekking around banglore,trekking, adventure,night trek">
    <meta name="author" content="Utoipatrips">
    <title>Login</title>

    <!-- Favicons-->
    <link rel="shortcut icon" href="~/Content/img/favicon.ico" type="image/x-icon">
    <link rel="apple-touch-icon" type="image/x-icon" href="~/Content/img/apple-touch-icon-57x57-precomposed.png">
    <link rel="apple-touch-icon" type="image/x-icon" sizes="72x72" href="~/Content/img/apple-touch-icon-72x72-precomposed.png">
    <link rel="apple-touch-icon" type="image/x-icon" sizes="114x114" href="~/Content/img/apple-touch-icon-114x114-precomposed.png">
    <link rel="apple-touch-icon" type="image/x-icon" sizes="144x144" href="~/Content/img/apple-touch-icon-144x144-precomposed.png">

    <!-- Google web fonts -->
    <link href="https://fonts.googleapis.com/css?family=Gochi+Hand|Lato:300,400|Montserrat:400,400i,700,700i" rel="stylesheet">
    <!-- CSS -->
    <link href="~/Content/css/base.css" rel="stylesheet">

    <!-- CSS -->
    <link href="~/Content/css/flickity.css" rel="stylesheet">

    <!--[if lt IE 9]>
      <script src="js/html5shiv.min.js"></script>
      <script src="js/respond.min.js"></script>
    <![endif]-->

</head>
<body class="bg" style="background-image:url(../Content/Header/signin.jpg);">
    <div id="preloader">
        <div class="sk-spinner sk-spinner-wave">
            <div class="sk-rect1"></div>
            <div class="sk-rect2"></div>
            <div class="sk-rect3"></div>
            <div class="sk-rect4"></div>
            <div class="sk-rect5"></div>
        </div>
    </div>
    <!-- End Preload -->
    <div class="layer"></div>
    <!-- Mobile menu overlay mask -->

    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3">
                <div id="login">
                    <div class="text-center"><img src="~/Content/img/logo.png" alt="Image" data-retina="true"></div>
                    <hr>
                    <!--  <form>
                          <div class="row">
                              <div class="col-md-6 col-sm-6 login_social">
                                  <a href="#" class="btn btn-primary btn-block"><i class="icon-facebook"></i> Facebook</a>
                              </div>
                              <div class="col-md-6 col-sm-6 login_social">
                                  <a href="#" class="btn btn-info btn-block "><i class="icon-google"></i>Google+</a>
                              </div>
                          </div>
                          <div class="login-or"><hr class="hr-or"><span class="span-or">or</span></div>
                        end row -->
                    <form method="post" name="loginForm">
                        @if (ViewBag.LoginError != null)
                        {
                            <div class="form-group">
                                <label style="color:red;">@ViewBag.LoginError</label>
                            </div>
                        }

                        <div class="form-group">
                            <label style="color:red;display:none;" id="invalidInput">Invalid inputs, Please try again!</label>
                        </div>

                        <div class="form-group">
                            <label>Email Address</label>
                            <input type="email" id="email" class=" form-control " placeholder="Email Address" name="Username">
                        </div>
                        <div class="form-group">
                            <label>Password</label>
                            <input type="password" id="password" class=" form-control" placeholder="Password" name="Password">
                        </div>
                        <p class="small">
                            @Html.ActionLink("Forgot Password?", "ForgotPassword", "PasswordReset", null, null)
                        </p>
                        @*@Html.ActionLink("Sign in", "Index", "Home", null, new { @class = "btn_full" })*@
                        <input type="submit" value="Sign In" class="btn_full" />
                        @Html.ActionLink("Sign Out", "Register", "Register", null, new { @class = "btn_full_outline" })
                    </form>
                </div>

            </div>
        </div>
    </div>

    <!-- End main -->
    <!-- Common scripts -->
    <script src="~/Content/js/jquery-2.2.4.min.js"></script>
    <script src="~/Content/js/common_scripts_min.js"></script>
    <script src="~/Content/js/functions.js"></script>

    <script>
        $('form').submit(function () {
            // Get the Login Name value and trim it
            var email = $.trim($('#email').val());
            var password = $.trim($('#password').val());

            // Check if empty of not
            if (email === '' || password === '') {
                $("#invalidInput").css("display", "block");
                return false;
            }
            return true;
        });
    </script>

</body>
</html>
