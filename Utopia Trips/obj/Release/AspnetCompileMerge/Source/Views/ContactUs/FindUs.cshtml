@model Utopia_Trips.Models.FindUsModel

@{
    ViewBag.Title = "FindUs | Contact Us | Utopiatrips";
    Layout = "~/Views/Shared/_BlogLayout.cshtml";
}

@section metatags
{
<meta name="keywords" content="one day trip,places to visit in bangalore,places to visit near bangalore,places near bangalore,one day trip from bangalore,places to visit near bangalore within 100 kms,places to visit in bangalore in one day,places to visit in bangalore for couples,2 days trip from bangalore,places near bangalore for weekend,trekking places" />
    <meta name="description" content="- Book the best one day trekking, two days trekking and night treks with Utopia Trips. We're just a call away!" />
}

<section class="parallax-window" data-parallax="scroll" data-image-src="../Content/Header/findus.jpg" data-natural-width="1200" data-natural-height="430">
    <div class="parallax-content-1">
        <div class="animated fadeInDown">
            <h1>Find Us</h1>
            <p>Let's Talk</p>
        </div>
    </div>
</section>

<main>
    <div id="position">
        <div class="container">
            <ul>
                <li>
                    <a href="@Url.Action("Index", "Home")">Home</a>
                </li>
                <li>Find Us</li>
            </ul>
        </div>
    </div>
    <!-- End Position -->
    <div class="container margin_60">
        <div class="row">
            <div class="col-md-8 col-sm-8">
                <div class="form_title">
                    <h3><strong><i class="icon-pencil"></i></strong>Fill the form below</h3>
                </div>
                <div class="step">
                    <div id="message-contact"></div>
                    @using (Html.BeginForm("FindUs", "ContactUs", FormMethod.Post))
                    {
                        <div class="form-group">
                            <label style="color:red;display:none;" id="invalidInput">Invalid inputs, Please try again!</label>
                        </div>
                        if (ViewBag.Message != null)
                        {
                            <div class="form-group">
                                <label style="color:forestgreen;display:none;" id="invalidInput">Thanks for contacting us! Our representative will call youo shortly.</label>
                            </div>
                        }

                        <div class="row">
                            <div class="col-md-6 col-sm-6">
                                <div class="form-group">
                                    <label>First Name</label>
                                    <input type="text" class="form-control" id="FirstName" name="FirstName" placeholder="Enter Name">
                                </div>
                            </div>
                            <div class="col-md-6 col-sm-6">
                                <div class="form-group">
                                    <label>Last Name</label>
                                    <input type="text" class="form-control" id="LastName" name="LastName" placeholder="Enter Last Name">
                                </div>
                            </div>
                        </div>
                        <!-- End row -->
                        <div class="row">
                            <div class="col-md-6 col-sm-6">
                                <div class="form-group">
                                    <label>Email</label>
                                    <input type="email" id="Email" name="Email" class="form-control" placeholder="Enter Email">
                                </div>
                            </div>
                            <div class="col-md-6 col-sm-6">
                                <div class="form-group">
                                    <label>Phone</label>
                                    <input type="text" id="Phone" name="Phone" class="form-control" placeholder="Enter Phone number">
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label>Message</label>
                                    <textarea rows="5" id="Message" name="Message" class="form-control" placeholder="Write your message" style="height:200px;"></textarea>
                                </div>
                            </div>
                        </div>
                        <input type="hidden" id="subject" name="Subject" value="Contact Us" class="form-control">

                        <div class="row">
                            <div class="col-md-6">
                                <input type="submit" value="Submit" class="btn_1">
                            </div>
                        </div>
                    }
                </div>
            </div>
            <!-- End col-md-8 -->
            <div class="col-md-4 col-sm-4">
                <div class="box_style_1">
                    <!--<span class="tape"></span>-->
                    <h4>Address <span><i class="icon-pin pull-right"></i></span></h4>
                    <p>
                        #80, Ground Floor 2nd Cross Rood Reflex Layout, Uttaralli Main Road, SBI, BANK opposite,, Kengeri Bangalore 560060, Hemmigepura Ward 198, RR Nagar, Bengaluru, Karnataka 560060
                    </p>
                    <!-- <hr>
                     <h4>Help center <span><i class="icon-help pull-right"></i></span></h4>
                     <p>
                         Lorem ipsum dolor sit amet, vim id accusata sensibus, id ridens quaeque qui. Ne qui vocent ornatus molestie.
                     </p>
                     <ul id="contact-info">
                         <li>+ 61 (2) 8093 3400 / + 61 (2) 8093 3402</li>
                         <li>
                             <a href="#">info@domain.com</a>
                         </li>
                     </ul>-->
                </div>
                <div class="box_style_4">
                    <i class="icon_set_1_icon-57"></i>
                    <h4>Need <span>Help?</span></h4>
                    <a href="tel://918197993224" class="phone">8197993224</a>
                    <small>Monday to Friday 9.00am - 7.30pm</small>
                </div>
            </div>
            <!-- End col-md-4 -->
        </div>
        <!-- End row -->
    </div>
    <!-- End container -->
</main>
<!-- End main -->
<script>
    $('form').submit(function () {
        // Get the Login Name value and trim it
        var name = $.trim($('#FirstName').val());
        var email = $.trim($('#Email').val());
        var phone = $.trim($('#Phone').val());
        var msg = $.trim($('#Message').val());

        // Check if empty of not
        if (name === '' || email === '' || phone === '' || msg === '') {
            $("#invalidInput").css("display", "block");
            return false;
        }
        $("#invalidInput").css("display", "none");
        return true;
    });
</script>