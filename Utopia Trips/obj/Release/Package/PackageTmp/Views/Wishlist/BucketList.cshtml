@model List<Utopia_Trips.Models.WishListModel>
@{
    ViewBag.Title = "BucketList | Wishlist | Utopiatrips";
    Layout = "~/Views/Shared/_BlogLayout.cshtml";
}

@section metatags
{
    <meta name="keywords" content="about" />
}


<section class="parallax-window" data-parallax="scroll" data-image-src="../Content/Header/backetlist.jpg" data-natural-width="1200" data-natural-height="430">
    <div class="parallax-content-1">
        <div class="animated fadeInDown">
            <h1>Wish List</h1>
            <p></p>
        </div>
    </div>
</section>


<main>
    <div id="position">
        <div class="container">
            <ul>
                <li>
                    <a href="@Url.Action("Index", "Home")">Home</a>
                </li>
                <!--<li><a href="#">Category</a>
                </li>-->
                <li>Bucket List</li>
            </ul>
        </div>
    </div>
    <!-- Position -->

    <div class="container margin_60">
        <div class="row">
            <div class="col-lg-12 col-md-12">
                @*<div id="tools">
                    <div class="row">
                        <div class="col-md-3 col-sm-3 col-xs-6">
                            <div class="styled-select-filters">
                                <select name="sort_price" id="sort_price">
                                    <option value="" selected>Sort by price</option>
                                    <option value="lower">Lowest price</option>
                                    <option value="higher">Highest price</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-3 col-sm-3 col-xs-6">
                            <div class="styled-select-filters">
                                <select name="sort_rating" id="sort_rating">
                                    <option value="" selected>Sort by ranking</option>
                                    <option value="lower">Lowest ranking</option>
                                    <option value="higher">Highest ranking</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-6 col-sm-6 hidden-xs text-right">
                            <a href="all_tours_grid.html" class="bt_filters"><i class="icon-th"></i></a> <a href="#" class="bt_filters"><i class=" icon-list"></i></a>
                        </div>
                    </div>
                </div>*@
                <!--/tools -->
                @foreach (var item in Model)
                {
                    <div class="strip_all_tour_list wow fadeIn" data-wow-delay="0.1s">

                        <div class="row">
                            <div class="col-lg-4 col-md-4 col-sm-4">
                                <div class="wishlist_close">-</div>
                                <div class="img_list">
                                    <a href="@item.Url">
                                        <img src=@item.Image alt="Image">
                                        <div class="short_info"><i class="icon_set_1_icon-4"></i>@item.EventId Trek</div>
                                    </a>
                                </div>
                            </div>
                            <div class="clearfix visible-xs-block"></div>
                            <div class="col-lg-6 col-md-6 col-sm-6">
                                <div class="tour_list_desc">
                                    <h3><strong>@item.EventTitle</strong></h3>
                                    <p>
                                        @item.Description
                                    </p>
                                </div>
                            </div>
                            <div class="col-lg-2 col-md-2 col-sm-2">
                                <div class="price_list">
                                    <div>
                                        <sup>Rs </sup>@item.Price<small>*Per person</small>
                                        <p>
                                            <a href="@item.Url" class="btn_1">Details</a>
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>


                    </div>
                <!--End strip -->
                }
            </div>
            <!-- End col lg-9 -->
        </div>
        <!-- End row -->
    </div>
    <!-- End container -->
</main>
<!-- End main -->
