    <script>
        $('form').submit(function () {
            // Get the Login Name value and trim it
            var name = $.trim($('#name_booking').val());
            var email = $.trim($('#email_booking').val());
            var phone = $.trim($('#phone_booking').val());
            var date = $.trim($('#date_booking').val());

            // Check if empty of not
            if (name === '' || email === '' || phone === '' || date === '') {
                $("#processInput").css("display", "none");
                $("#invalidInput").css("display", "block");
                return false;
            }
            $("#invalidInput").css("display", "none");
            $("#processInput").css("display", "block");
            return true;
        });

        $(document).ready(function () {
            $('#date_booking').datepicker({
                daysOfWeekDisabled: [1, 2, 3, 4]

            });

        });
    </script>
