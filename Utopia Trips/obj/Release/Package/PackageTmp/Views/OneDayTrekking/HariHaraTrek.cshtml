                    @Html.BeginForm("Payment", "Payment", FormMethod.Post)
                    {
                    <h3 class="inner">- Booking -</h3>

                    <div class="row">
                        <div class="col-md-6 col-sm-6">
                            <div class="form-group">
                                <label>First name</label>
